pipeline {
    agent {
    node {
        label 'debian'
        }
    }
    
    stages {
        stage('Deploy to minikube') {
           	steps{
           		echo "Deployment started ..."
           		sh 'ls -ltr'
           		sh 'pwd'
           		sh 'hostname'
           		script {
           		sh "kubectl create -f  /home/user/laba/K8s/mysql-final.yaml"
           		sh "kubectl create -f  /home/user/laba/K8s/wp-final.yaml"
                    }
           		}
            }
        }
    }
